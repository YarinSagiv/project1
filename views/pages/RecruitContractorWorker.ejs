<html>

<head>
    <link href="css/sty.css" rel="stylesheet">

</head>

<body>

    <header>
        <%- include('../partials/_header') %>
    </header>

    <form id="form1" action="/RecruitContractorWorker" method="POST" >
        <div class="container">
            <p>Please fill the form</p>
            <label id="errorinput"></label><br>
            <label>Recruit:</label>
            <% if(ev1!=null && typeof ev1 !="undefined" ){ %>
                <select id="recruit1" name="idE">
                    <% ev1.forEach(function(dat) {%>
                        <% if(typeof dat.eventname !=undefined && dat.eventname) { %>
                            <option value="<%=dat._id %>">
                                <%= dat.eventname %>
                            </option>
                            <% } %>
                                <% }); %>
                </select>
                <% } %>
                    </br>
                    <label for="date"><b>Start time</b></label>
                    <input type="time" name="startTime" id="startTime" required>
                    </br>
                    <% if ( hasAddress==true){%>
                        <br>
                        <label for="location" style="font-size:18px;">do you want to use the contractor worker
                            address?</label>
                        <input type="checkbox" onclick="choose()" style="width: 18px; height: 18px;" name="locationC"
                            id="locationC" value="true" checked>
                        </br>
                       <label for="location" style="display: none;" id="location"><b>enter your location:
                                </b></label>
                            <input type="text" style="display: none;" name="locationE" id="locationE">
                             <% } else { %>
                                <label for="location" id="location"><b>enter your location:
                                </b></label>
                            <input type="text" name="locationE" id="locationE" required>
                            <%} %>
                            </br>
                            <label for="information"><b>information:</b></label>
                            <input type="text" placeholder="Enter extre information about the recruit"
                                name="information" id="information" maxlength="200">
                            </br>

                            <% if(prices!=null && typeof prices !="undefined" ){ %>
                                <label for="prices"><b>price rate:</b></label>
                                <select id="prices" name="priceRate">
                                    <% prices.forEach(function(dat) {%>
                                        <option value="<%=dat._id %>">
                                            <%= dat.title %>, price: <%= dat.price %>, description: <%= dat.description
                                                        %>, traveling fee: <%= dat.travelingFee %>, accompanied:
                                                            <%if(dat.accompanied=="true"){ %>yes <%}else{%>no<%}%>
                                        </option>
                                        <% }); %>
                                </select>
                                <% } %>

        </div>
        <input type="hidden" value="<%=_id%>" name="iduser">

        <button type="submit" class="registerbtn">finish Recruit</button>
        <button type="button" class="registerbtn" href="/profileEmployerPage">cancel</button>


    </form>

    <span id="message" style="color:red"> </span> <br><br>

    <script>


        function choose() {
            if ((document.getElementById("locationC").checked) == false) {
                document.getElementById("locationE").style.display = "block";
                document.getElementById("locationE").style.required = true;
                document.getElementById("location").style.display = "block";
            }
            else {
                document.getElementById("locationE").style.display = "none";
                document.getElementById("location").style.display = "none";
                document.getElementById("locationE").style.required = false;

            }


        }
        console.log("hello3333333");

        function beforeSubmit()
        {
            console.log("hello2222");
            if(typeof document.getElementById("startTime").value==undefined)
            {
                console.log("hello");
            }
            return false;
        }

    </script>
</body>

</html>